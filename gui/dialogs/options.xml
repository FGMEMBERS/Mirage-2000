<?xml version="1.0" encoding="iso-8859-1"?>

<PropertyList>
  
  <!-- If you put the dialog file in the Aircraft/aircraftname/gui/dialog the dialog box is loaded -->
  <name>options</name>
  <modal type="bool">false</modal>
  <layout>vbox</layout>

  <group>
    <layout>hbox</layout>
    <empty>
      <stretch>1</stretch>
    </empty>

    <text>
      <label>Options</label>
    </text>

    <empty>
      <stretch>1</stretch>
    </empty>

    <button>
      <pref-width>16</pref-width>
      <pref-height>16</pref-height>
      <legend />

      <default>1</default>
      <keynum>27</keynum>
      <border>2</border>
      <binding>
        <command>dialog-close</command>
      </binding>
      <binding>
        <command>dialog-apply</command>
      </binding>
    </button>
  </group>

  <hrule />

  <group>
    <layout>hbox</layout>
    <text><label>Show Pilot</label></text>
    <checkbox>
      <property>/controls/seat/pilot</property>
      <live>true</live>
      <binding>
        <command>property-toggle</command>
        <property>/controls/seat/pilot</property>
      </binding>
    </checkbox>
  </group>

  <group>
    <layout>hbox</layout>
    <text><label>Cockpit Vibration</label></text>
    <checkbox>
      <property>/controls/cabin/shake-effect</property>
      <live>true</live>
      <binding>
        <command>property-toggle</command>
        <property>/controls/cabin/shake-effect</property>
      </binding>
    </checkbox>
  </group>

  <hrule />

  <button>
    <legend>Toggle ground equipment</legend>
    <binding>
      <command>property-toggle</command>
      <property>/controls/ground-equipment</property>
    </binding>
  </button>

  <hrule />

    <group>
    <layout>hbox</layout>
    <text><label>Command Bug</label></text>
    <checkbox>
      <property>/controls/bugs/command-bug</property>
      <live>true</live>
      <binding>
        <command>property-toggle</command>
        <property>/controls/bugs/command-bug</property>
      </binding>
    </checkbox>
  </group>

  <hrule />

  <group>
    <layout>hbox</layout>
    <text><label>CANVAS MFD</label></text>
    <checkbox>
      <property>/instrumentation/efis/Mode</property>
      <live>true</live>
      <binding>
        <command>property-toggle</command>
        <property>/instrumentation/efis/Mode</property>
      </binding>
      <binding>
        <command>nasal</command>
        <script>
          aircraft.data.add("/instrumentation/efis/Mode");
          mirage2000.mdfselection()</script>
      </binding>
    </checkbox>
  </group>

  <hrule />
  <text><label>Fly-by-wire</label></text>
  <group>
    <layout>hbox</layout>
    <group>
      <layout>vbox</layout>
      <halign>left</halign>
      <text><label>Auto trim</label></text>
      <text><label>A/A - CHARGES</label></text>
    </group>

    <group>
      <layout>vbox</layout>
      <halign>right</halign>
      <checkbox>
        <property>controls/SAS/autotrim</property>
        <live>true</live>
        <binding>
          <command>property-toggle</command>
          <property>controls/SAS/autotrim</property>
        </binding>
      </checkbox>
      <slider>
        <name>CAT</name>
        <property>controls/SAS/cat</property>
        <live>1</live>
        <min>0</min>
        <max>1</max>
        <step>1</step>
        <binding>
          <command>dialog-apply</command>
        </binding>
      </slider>
    </group>
  </group>

  <hrule />

  <group>
    <layout>hbox</layout>
    <group><text><label>HUD</label></text></group>

    <group>
    <layout>vbox</layout>
    <halign>right</halign>
      <slider>
        <name>HUD</name>
        <property>controls/hud</property>
        <live>1</live>
        <min>0</min>
        <max>1</max>
        <step>1</step>
        <binding>
          <command>dialog-apply</command>
        </binding>
      </slider>
      </group>
  </group>

  <hrule />

  <button>
    <legend>MAP (test)</legend>
    <binding>
      <command>nasal</command>
      <script>mirage2000.createMap()</script>
    </binding>
  </button>

<!--
  <button>
    <legend>Type</legend>
    <binding>
      <command>nasal</command>
      <script>mirage2000.changeindex()</script>
    </binding>
  </button>
-->

  <hrule />

  <button>
    <legend>REPAIR</legend>
    <binding>
      <command>nasal</command>
      <script>
        var failure_modes = FailureMgr._failmgr.failure_modes;
        var mode_list = keys(failure_modes);
        foreach(var failure_mode_id; mode_list) {
          FailureMgr.set_failure_level(failure_mode_id, 0);
        }
        </script>
    </binding>
  </button>

</PropertyList>
