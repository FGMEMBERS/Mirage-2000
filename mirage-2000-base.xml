  </sim>

  <controls>
    <gear>
      <brake-parking type="double"> 1 </brake-parking>
    </gear>
    <engines>
      <engine n="0">
	<boost type="double">0</boost>
        <magnetos>0</magnetos>
      </engine>
      <engine n="1">
	<boost type="double">0</boost>
        <magnetos>0</magnetos>
      </engine>
    </engines>
    <armament>
      <trigger type="bool">false</trigger>
      <master-arm type="bool">true</master-arm>
      <position-norm type="int">1</position-norm>
      <station n="0">
        <release type="bool">false</release>
      </station>
      <station n="1">
        <release type="bool">false</release>
      </station>
      <station n="2">
        <release type="bool">false</release>
      </station>
      <station n="3">
        <release type="bool">false</release>
      </station>
      <station n="4">
        <release type="bool">false</release>
      </station>
      <station n="5">
        <release type="bool">false</release>
      </station>
      <station n="6">
        <release type="bool">false</release>
      </station>
    </armament>
  </controls>

  <engines>
    <engine n="0">
      <engine-num type="int">0</engine-num>
      <rpm>500</rpm>
      <running>false</running>
    </engine>
  </engines>

  <instrumentation>
    <doors>
      <crew>
        <position-norm type="float">0</position-norm>
      </crew>
      <passenger>
        <position-norm type="float">0</position-norm>
      </passenger>
    </doors>
    <rwr>
      <display-lighting-intens type="double">0.4</display-lighting-intens>
      <symbology-lighting-intens type="double">1</symbology-lighting-intens>
    </rwr>
    <enav><selected type="int">3</selected></enav>
    <radar>
      <range type="int" archive="y">40</range>
      <range-factor type="double" archive="n">0.001888</range-factor>
      <minimized type="bool" archive="y">false</minimized>
      <selected type="int">3</selected>
      <!-- inicio en pruebas -->
      <enabled type="bool">true</enabled>
      <az-field type="double">120</az-field>
      <range type="double">150</range>
      <range-selected type="double">50</range-selected>
      <radar2-range type="double">150</radar2-range>
      <display-rdr type="bool">true</display-rdr>
      <radar-standby type="int">3</radar-standby>
      <mode>
        <rws type="bool">true</rws>
        <tws-auto type="bool">false</tws-auto>
      </mode>
    </radar> 
    <terrain-radar>
      <hi-elev>
        <alt-ft type="double">-9999.9</alt-ft>
        <lat-deg type="double">-9999.9</lat-deg>
        <lon-deg type="double">-9999.9</lon-deg>
        <dist-m type="double">-9999.9</dist-m>
        <collision-status type="string">initialised</collision-status>
      </hi-elev>
      <settings>
        <mode type="string">extend</mode>
        <state type="string">off</state>
        <range-m type="double">2500</range-m>
        <step-m type="double">250</step-m>
        <max-climb-rate-fps type="double">120</max-climb-rate-fps>
        <hi-elev-markers type="bool">false</hi-elev-markers>
      </settings>
    </terrain-radar>
    <mfd>
      <modeL type="int"> 0 </modeL>
      <modeR type="int"> 1 </modeR>
    </mfd>
  </instrumentation>

  <input>
    <keyboard include="Nasal/mirage-2000-keyboard.xml"/>
  </input>
 
  <environment>
    <turbulence>
      <use-cloud-turbulence>true</use-cloud-turbulence>
    </turbulence>
  </environment>

  <systems>
    <refuel>
      <type>probe</type>
      <serviceable type="bool">true</serviceable>
    </refuel>
  </systems>

  <consumables>
    <fuel>
      <tank n="0">
        <tank-num type="int">0</tank-num>
