<PropertyList>
  <name>Mirage 2000-5D Wingmen</name>
  <scenario>
    <description>
      2 wingmens
      This scenario formates 2 Mirage 2000-5D to the parent ac at the position
      designated by the x,y,z offsets.
    </description>

    <!-- wingman CONDE-2 (first wingman scenario AI/wingman_m2000-5D_demo.xml) -->
    <entry>
      <name>CONDE-2</name>
      <type>wingman</type>
      <model>Aircraft/Mirage-2000/Models/m2000-5B.xml</model>
      <x-offset>-30</x-offset>
      <y-offset>30</y-offset>
      <z-offset>0</z-offset>
      <formate>true</formate>
      <max-speed-kts>500</max-speed-kts>
      <coefficients>
        <heading>5.0</heading>
        <pitch>4.0</pitch>
        <bank>4.0</bank>
        <speed>2.5</speed>
      </coefficients>
    </entry>

    <!-- wingman CONDE-3 (second wingman scenario AI/wingman_m2000-5D_demo.xml) -->
    <entry>
      <name>CONDE-3</name>
      <type>wingman</type>
      <model>Aircraft/Mirage-2000/Models/m2000-5B.xml</model>
      <x-offset>-60</x-offset>
      <y-offset>60</y-offset>
      <z-offset>0</z-offset>
      <formate>true</formate>
      <max-speed-kts>500</max-speed-kts>
      <coefficients>
        <heading>5.0</heading>
        <pitch>4.0</pitch>
        <bank>4.0</bank>
        <speed>2.5</speed>
      </coefficients>
    </entry>

  </scenario>

</PropertyList>
