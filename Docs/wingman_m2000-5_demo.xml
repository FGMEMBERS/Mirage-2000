<?xml version="1.0"?>

<PropertyList>
  <name>Mirage 2000-5 Wingman</name>
  <scenario>
    <description>
      1 wingman
      This scenario formates 1 Mirage 2000-5 to the parent ac at the position
      designated by the x,y,z offsets.
    </description>

    <!-- wingman MARAUD-2 (first wingman scenario AI/wingman_m2000-5_demo.xml) -->
    <entry>
      <name>MARAUD-2</name>
      <type>wingman</type>
      <model>Aircraft/Mirage-2000/Models/m2000-5.xml</model>
      <x-offset>-30</x-offset>
      <y-offset>-30</y-offset>
      <z-offset>0</z-offset>
      <formate>true</formate>
      <max-speed-kts>500</max-speed-kts>
      <coefficients>
        <heading>5.0</heading>
        <pitch>4.0</pitch>
        <bank>4.0</bank>
        <speed>2.5</speed>
      </coefficients>
    </entry>

  </scenario>

</PropertyList>
