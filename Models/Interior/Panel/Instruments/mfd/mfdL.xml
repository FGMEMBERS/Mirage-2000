  <!-- __________________ Buttons _____________________-->
  <animation>
    <type>pick</type>
    <object-name>bt-b1</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>  
      <binding>
        <command>property-adjust</command>
        <property>/instrumentation/mfd/modeL</property>
        <step>1</step>
        <min>0</min>
        <max>4</max>
        <wrap>true</wrap>
      </binding>     
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>bt-b2</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>mirage2000.nav_src_set();</script>
        <condition>
          <equals>
            <property>/instrumentation/mfd/modeL</property>
            <value> 0 </value>
          </equals>
        </condition> 
      </binding>            
    </action>
  </animation>
 
  <animation>
    <type>pick</type>
    <object-name>bt-h1</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>  
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/mfd/ptr2-src</property>
        <step>1</step>
        <min>0</min>
        <max>2</max>
        <wrap>true</wrap>     
      </binding>
    </action>
  </animation>
 
  <animation>
    <type>pick</type>
    <object-name>bt-h2</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>  
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/mfd/ptr1-src</property>
        <step>1</step>
        <min>0</min>
        <max>2</max>
        <wrap>true</wrap>     
