 <!--EHSI CRS KNOB-->
 <animation>
   <type>pick</type>
   <object-name>Course-knob</object-name>
   <action>
   <button>4</button>
   <!--  scroll up -->
   <repeatable>false</repeatable>
   <binding>
     <command>property-adjust</command>
     <property>instrumentation/nav/radials/selected-deg</property>
     <step>1</step>
     <min>1</min>
     <max>361</max>
     <wrap>true</wrap>
     <condition>
       <and>
         <equals>
           <property>/instrumentation/mfd/modeL</property>
           <value> 0 </value>
         </equals>
         <equals>
           <property>autopilot/settings/nav-source</property>
           <value>NAV1</value>  
         </equals>
       </and>
     </condition>
   </binding>
   <binding>
     <command>property-adjust</command>
     <property>instrumentation/nav[1]/radials/selected-deg</property>
     <step>1</step>
     <min>1</min>
     <max>361</max>
     <wrap>true</wrap>
     <condition>
       <and>
         <equals>
           <property>/instrumentation/mfd/modeL</property>
           <value> 0 </value>
         </equals>
         <equals>
           <property>autopilot/settings/nav-source</property>
           <value>NAV2</value>  
         </equals>
       </and>
     </condition>
   </binding>
   <binding>
     <command>property-adjust</command>
     <property>instrumentation/altimeter/setting-inhg</property>
     <step>0.01</step>
     <min>25</min>
     <max>36</max>
     <wrap>true</wrap>
     <condition>
       <equals>
         <property>/instrumentation/mfd/modeL</property>
         <value> 1 </value>
       </equals>
     </condition>        
   </binding>
