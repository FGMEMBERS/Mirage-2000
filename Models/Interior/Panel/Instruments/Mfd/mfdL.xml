  <animation>
    <type>pick</type>  
    <object-name>pot-r4</object-name>
    <action>
      <button>3</button>
      <!--  scroll down -->
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/mfd/dimm-l</property>
        <step>-0.05</step>
        <min>0</min>
        <max>1</max>
        <wrap>false</wrap>
      </binding> 
