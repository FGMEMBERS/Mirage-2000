<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>mfd_cadre.ac</path>

   <animation>
    <!-- Objets opaques -->
    <object-name>cadre</object-name>
    <object-name>br-dec</object-name>
    <object-name>br-inc</object-name>
    <object-name>bl-dec</object-name>
    <object-name>bl-inc</object-name>
    <object-name>vis</object-name>    
    <object-name>br-knob</object-name>
    <object-name>bl-knob</object-name>
    <object-name>bt-b1</object-name>
    <object-name>bt-b2</object-name>
    <object-name>bt-b3</object-name>
    <object-name>bt-b4</object-name>
    <object-name>bt-h1</object-name>
    <object-name>bt-h2</object-name>
    <object-name>bt-h3</object-name>
    <object-name>bt-h4</object-name>
    <object-name>bt-h5</object-name>
    <object-name>pot-l1</object-name>
    <object-name>pot-l2</object-name>
    <object-name>pot-l3</object-name>
    <object-name>pot-l4</object-name>
    <object-name>pot-r1</object-name>
    <object-name>pot-r2</object-name>
    <object-name>pot-r3</object-name>
    <object-name>pot-r4</object-name>    
    
    <!-- Objets transparents -->
    <object-name>vitre</object-name>
  </animation>
  
  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>
  
  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Mirage-2000/Models/Interior/Panel/Instruments/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <!--prov hide vitre en attendant l'antibuée :)-->
  <animation>
  <type>select</type>
  <object-name>vitre</object-name>
  <condition>
    <property>instrumentation/mfd/mfd-glass</property>
  </condition>
  </animation>  
  
  
  <animation>
    <type>material</type>
    <object-name>cadre</object-name>    
    <object-name>vis</object-name>    
    <object-name>br-knob</object-name>
    <object-name>bl-knob</object-name>
    <object-name>bt-b1</object-name>
    <object-name>bt-b2</object-name>
    <object-name>bt-b3</object-name>
    <object-name>bt-b4</object-name>
    <object-name>bt-h1</object-name>
    <object-name>bt-h2</object-name>
    <object-name>bt-h3</object-name>
    <object-name>bt-h4</object-name>
    <object-name>bt-h5</object-name>
    <object-name>pot-l1</object-name>
    <object-name>pot-l2</object-name>
    <object-name>pot-l3</object-name>
    <object-name>pot-l4</object-name>
    <object-name>pot-r1</object-name>
    <object-name>pot-r2</object-name>
    <object-name>pot-r3</object-name>
    <object-name>pot-r4</object-name>
    <emission>      
      <factor>0.13/</factor>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
  </animation>

    <!-- __________________ Buttons _____________________-->
<!--Pages-->
  <animation>
    <type>pick</type>
    <object-name>bt-b1</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>  
      <binding>
        <command>property-adjust</command>
        <property>/instrumentation/mfd/modeL</property>
        <step>1</step>
        <min>0</min>
        <max>2</max>
        <wrap>true</wrap>
      </binding>     
    </action>
  </animation>  
  
 
  <!--Pot r1 Altitude-->
  <animation>
    <type>pick</type>
    <object-name>pot-r1</object-name>
    <action>
      <button>4</button>
      <!--  scroll up -->
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>   
      <binding>
        <command>property-adjust</command>
        <property>autopilot/settings/target-altitude-ft</property>
        <step>500</step>
        <min>200</min>
        <max>50000</max>
        <wrap>false</wrap>
        <condition>
          <equals>
            <property>/instrumentation/mfd/modeL</property>
            <value> 0 </value>
          </equals>
        </condition>        
      </binding>   
    </action>
  </animation>

  <animation>
    <type>pick</type>  
    <object-name>pot-r1</object-name>
    <action>
      <button>3</button>
      <!--  scroll down -->
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
      <binding>
        <command>property-adjust</command>
        <property>autopilot/settings/target-altitude-ft</property>
        <step>-500</step>
        <min>200</min>
        <max>50000</max>
        <wrap>false</wrap>
        <condition>
          <equals>
            <property>/instrumentation/mfd/modeL</property>
            <value> 0 </value>
          </equals>
        </condition>
      </binding>
    </action>
  </animation>
 
  <!--Pot l1 Speed-->
  <animation>
    <type>pick</type>
    <object-name>pot-l1</object-name>
    <action>
      <button>4</button>
      <!--  scroll up -->
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding> 
      <binding>
        <command>property-adjust</command>
        <property>autopilot/settings/target-speed-kt</property>
        <step>5</step>
        <min>150</min>
        <max>550</max>
        <wrap>false</wrap>
        <condition>
          <equals>
            <property>/instrumentation/mfd/modeL</property>
            <value> 0 </value>
          </equals>
        </condition>        
      </binding>
    </action>
  </animation>
 
  <animation>
    <type>pick</type>  
    <object-name>pot-l1</object-name>
    <action>
      <button>3</button>
      <!--  scroll down -->
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
      <binding>
        <command>property-adjust</command>
        <property>autopilot/settings/target-speed-kt</property>
        <step>-5</step>
        <min>150</min>
        <max>550</max>
        <wrap>false</wrap>
        <condition>
          <equals>
            <property>instrumentation/mfd/modeL</property>
            <value> 0 </value>
          </equals>
        </condition>
      </binding> 
    </action>
  </animation>

<!--DIMM-->
<!--Pot r4 Luminosite-->
